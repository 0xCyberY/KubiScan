{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug CVE Command",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/KubiScan.py",  // Path to your main Python script
            "console": "integratedTerminal",  // Use the integrated terminal in VS Code
            "args": [
                "--cve"  // Add the --cve flag to run the CVE command
            ],
            "justMyCode": false,  // Set to false to debug external libraries as well
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // If you need to include additional paths
            }
        }
    ]
}
